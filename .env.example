# Django Core Settings
DEBUG=1
DJANGO_SECRET_KEY=change-me-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Timezone
TIME_ZONE=Australia/Brisbane

# Stripe Configuration
# Get your API key from: https://dashboard.stripe.com/apikeys
# Use sk_test_... for testing, sk_live_... for production
STRIPE_API_KEY=sk_test_...
# Cache TTL for Stripe catalog in seconds (default: 300 = 5 minutes)
STRIPE_CATALOG_TTL_SECONDS=300

# Startup & Background Jobs
# Set to 1 to trigger subscription sync on app startup
STARTUP_SYNC=1

# Stripe Key Storage
# Set to 1 to use OS keyring (Windows Credential Manager, etc.) for key storage
USE_KEYRING=0
# Service name for keyring storage
KEYRING_SERVICE_NAME=NewFarmDogWalking
SUPPORT_EMAIL=support@yourorg.example
PRODUCTION=0
CSRF_TRUSTED_ORIGINS=

# Celery Configuration (Optional)
# If you don't use Celery, leave these empty and set START_CELERY_BEAT=0
# Redis URLs for broker and result backend
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
# Set to 1 to enable Celery beat scheduler for recurring tasks
START_CELERY_BEAT=0